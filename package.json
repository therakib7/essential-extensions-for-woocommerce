        "url": "https://github.com/therakib7/essential-extensions-for-woocommerce/issues"
    },
    "main": "src/index.tsx",
    "dependencies": {
        "@fortawesome/fontawesome-common-types": "^6.5.2",
        "@fortawesome/free-solid-svg-icons": "^6.5.2",
